@model Investis.ViewModel.BusinessRegisterViewModel

@{
    ViewBag.Title = "Register";

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@Styles.Render("~/Content/bundle")
@Scripts.Render("~/Scripts/bundle")

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
<div class="container">

    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.Username)*@
        @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Username, null, new { @class = "error" })
    </div>
    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.Email)*@
        @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Email, null, new { @class = "error" })
    </div>
    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.Password)*@
        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Password, null, new { @class = "error" })
    </div>
    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.ConfirmPassword)*@
        @Html.PasswordFor(temp => temp.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.ConfirmPassword, null, new { @class = "error" })
    </div>



    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.Mobile)*@
        @Html.TextBoxFor(temp => temp.Mobile, new { placeholder = "Mobile", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Mobile, null, new { @class = "error" })
    </div>

    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.BusinessName)*@
        @Html.TextBoxFor(temp => temp.BusinessName, new { placeholder = "BusinessName", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.BusinessName, null, new { @class = "error" })
    </div>

    <div class="form-group col-md-12">
        @*@Html.LabelFor(temp => temp.Address)*@
        @Html.TextAreaFor(temp => temp.Address, new { placeholder = "Address", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Address, null, new { @class = "error" })
    </div>

    <div class="form-group col-md-6">
        @*@Html.LabelFor(temp => temp.City)*@
        @Html.TextBoxFor(temp => temp.City, new { placeholder = "City", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.City, null, new { @class = "error" })
    </div>

    <div class="form-group col-md-6">

        <div class="form-group col-md-6">
            @Html.DropDownListFor(temp => temp.CountryID, ViewBag.VCountryList as SelectList, "--Select Country--", new { @class = "form-control" })

        </div>
        <div class="form-group col-md-6">

            @Html.ValidationMessageFor(temp => temp.CountryID, null, new { @class = "error" })
        </div>
        @*@Html.DropDownListFor(m => m.CountryID, new SelectList(Model.CountryID, "CountryID", "CountryName"), "--Select Country--")*@
    </div>
    <div class="form-group col-md-6">
        <button type="submit" class="btn btn-success">Register</button><a class="text-danger" href="/Account/Login">Login</a>

    </div>


</div>

    @*@Html.ValidationSummary()*@
}

@section scripts{
    @*<script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@


    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
}
